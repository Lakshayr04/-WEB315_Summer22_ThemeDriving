@page "/enginepowerlist"
<h3>EnginePowerList</h3>
<button class="btn btn-primary" @onclick="DisplayList">Show List</button>
@for(int i = 0 ; i < nOfTimes; i++)
{
    @if(List.Length >0){
        <p>@List[i]</p>
    }
    
}
<input type="number" value="5" @onchange="(e)=> UpdateData(int.Parse(e.Value.ToString()))">
@code {
    string[] List= new string[] {};
    int nOfTimes = 5;
    public void  DisplayList()
    {
        List = new string []{"Tourque","HorsePower","RPM", "PDS", "CC"};
    }
    public void UpdateData(int amount)
    {
        if(amount > 0 && amount < 6)
        {
            nOfTimes = amount;
        }
    }
}
